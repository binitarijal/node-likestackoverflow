<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ASKME - Questions</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }

        body {
            background: white;
            color: rgb(0, 0, 0);
          
        }

      

        /* Mobile Navbar */
        .navbar-mobile-toggle {
            display: none;
            flex-direction: column;
            cursor: pointer;
        }

        .navbar-mobile-toggle span {
            width: 25px;
            height: 3px;
            background: white;
            margin: 4px 0;
            transition: 0.3s;
        }

        @media (max-width: 768px) {
            .navbar-menu {
                display: none;
                flex-direction: column;
                position: absolute;
                top: 60px;
                right: 0;
                background: rgba(5, 3, 3, 0.1);
                width: 100%;
                text-align: center;
                padding: 20px 0;
            }

            .navbar-menu.active {
                display: flex;
            }

            .navbar-mobile-toggle {
                display: flex;
            }
        }

        /* Card Styles */
        .card {
            width: 100vw;
            max-width: 600px;
            background: rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(10px);
            padding: 20px;
            margin: 15px auto;
            border-radius: 15px;
            box-shadow: 0px 4px 10px rgba(196, 191, 60, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.3);
        }

        .question {
            font-size: 1.2rem;
            font-weight: bold;
        }

        .author {
            font-size: 0.9rem;
            color: #000000;
            margin-top: 10px;
        }
         
/* Navbar Styles */
.navbar {
    background-color: #2c3e50;
    padding: 1rem 2rem;
    position: sticky;
    top: 0;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.navbar-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
}

.navbar-logo {
    color: white;
    font-size: 1.5rem;
    font-weight: 700;
    text-decoration: none;
}

.navbar-menu {
    display: flex;
    list-style-type: none;
}

.navbar-item {
    margin-left: 1.5rem;
}

.navbar-link {
    color: #ecf0f1;
    text-decoration: none;
    font-size: 1rem;
    transition: color 0.3s ease;
    position: relative;
    padding: 0.5rem 0;
}

.navbar-link:hover {
    color: #3498db;
}

.navbar-link::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: #3498db;
    transition: width 0.3s ease;
}

.navbar-link:hover::after {
    width: 100%;
}

.navbar-mobile-toggle {
    display: none;
    flex-direction: column;
    justify-content: space-between;
    width: 30px;
    height: 21px;
    cursor: pointer;
}

.navbar-mobile-toggle span {
    display: block;
    height: 3px;
    width: 100%;
    background-color: white;
    border-radius: 3px;
}
    </style>
</head>
<body>

    <!-- Navigation Bar -->
 
    <%-include("../components/navbar.ejs")%>   <!-- made resuable component and included it in all necessary place-->

    <!-- Question Cards -->
    <div class="card-container">
 
        <div class="card" >
            <h1 class="question"><%- data[0].title %></h1>
            <p class="question"><%-data[0].description %></p>
            <img width="400px" height="400px" src="http://localhost:3000/<%- data[0].image %>" alt="failed load">
            <br> <i class="author">Author : <%-data[0].user.username %></i>
            <p>posted on: <%-new Date(data[0].createdAt).toLocaleDateString()%></p>
        </div>
        <div class="answer">
            <div class="card" >
                <% questionanswers.forEach((answer)=>{ %>
                <p ><%-answer.answerText %></p>
                <br> <i >Author : <%-answer.user.username %></i>
                <p>posted on: <%-new Date(answer.createdAt).toLocaleDateString()%></p>
            </div>
            <%}) %>
        </div>
        <div class="card">
            <h3>Answer</h3>
            <form action="/answer/<%- data[0].id %>" method="post">
            <textarea name="answer"  rows="5" cols="80" id=""></textarea>
            <br>
            <button>submit</button>
        </form>
        </div>
 
</div> 
   

    

    <script>
        // Mobile Navbar Toggle
        const mobileToggle = document.getElementById("mobileToggle");
        const navbarMenu = document.getElementById("navbarMenu");

        mobileToggle.addEventListener("click", () => {
            navbarMenu.classList.toggle("active");
        });
    </script>

</body>
</html>
